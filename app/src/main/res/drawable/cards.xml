<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#fefeff" />
            <gradient android:angle="180" android:startColor="#0c00f7" android:endColor="#7386ff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ffffff" />
            <gradient android:angle="0" android:startColor="#9C27B0" android:endColor="#7B1FA2" />
        </shape>
    </item>
</selector>